@{
    ViewData["Title"] = "Thông tin cá nhân ";
    Layout = "LayoutForSettingInfo";
    <link rel="stylesheet" type="text/css" href="~/css/hoSoCaNhan.css" />

}

<div class="col-main col-lg-9 col-md-9 col-sm-12 col-xs-12 col-fhs-main-body">
    <div class="my-account user-detail block">
        <div class="page-title">
            <h1 style="font-weight:600;">Đổi mật khẩu</h1>
        </div>
        <form accept-charset="UTF-8" asp-controller="QuanLyTaiKhoan" asp-action="doiMatKhau" method="post" class="form-account-info">
            <div>
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">Mật khẩu hiện tại <span>*</span></label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" name="mkHienTai">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">Mật khẩu mới <span>*</span></label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" name="mkMoi">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">Nhập lại mật khẩu mới <span>*</span></label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" name="mkNhapLai">
                    </div>
                </div>
            </div>
            <div style="text-align: center;padding: 16px 0 5px 0;">
                <button type="submit" title="Lưu thay đổi" id="btn-save-account-info" class="btn-save-confirm"><span><span>Lưu thay đổi</span></span></button>
            </div>
        </form>
    </div>
</div>